<h4>Hie There,</h4>

<%if(locals.user) {%>
<section id="feed-posts">
    <h4>POST The Text</h4>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" col="30" row="3" placeholder="Write A POST"></textarea>
        <input type="submit" value="post">
    </form>
</section>
<%}%>
    <div id="posts-list-container">
        <ul>

            <% for (post of posts) {%>
            <p>
                <li>
                    <%=post.content%>
                    <small>
                        <%=post.user.name%>
                        <%=post.createdAt.toLocaleString()%>
                    </small>
                </li>
            </p>
            
            <%}%>
        </ul>
    </div>

